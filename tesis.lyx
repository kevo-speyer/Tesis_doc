\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
U_{LJ}(r)=\begin{cases}
4\varepsilon^{(ab)}\left[\left(\frac{\sigma}{r}\right)^{12}-\left(\frac{\sigma}{r}\right)^{6}\right] & ;\quad si\;r\leq r_{C}^{(ab)}\\
0 & ;\quad si\;r>r_{C}^{(ab)}
\end{cases}\,,k\label{eq:Lennard_Jones}
\end{equation}

\end_inset

donde 
\begin_inset Formula $r$
\end_inset

