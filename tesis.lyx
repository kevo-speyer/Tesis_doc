key "PhysRevLett.96.206101,PhysRevLett.82.4671,:/content/aip/journal/jcp/135/21/10.1063/1.3663381,PhysRevLett.101.226101,PhysRevLett.97.266101,:/content/aip/journal/pof2/16/5/10.1063/1.1669400,Doshi05072005,:/content/aip/journal/jcp/135/22/10.1063/1.3663965"
literal "true"

\end_inset

